@attribute [Authorize]
@page "/admin/home"

@if (QrCodeInfoGenerators == null)
{
    <h4><i>Loading...</i></h4>
}
else
{
    <div class="row">
        <div class="col-md-6" style="min-height: 100vh">
            <table class="table table-bordered table-condensed table-responsive">
                <thead>
                    <tr>
                        <td>
                            QR Code
                        </td>
                        <td>
                            Status
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var qrCodeInfo in QrCodeInfoGenerators)
                    {
                        <tr>
                            <td>
                                <div>
                                    <img @onclick="@(()=>QrCodeClickAsync(qrCodeInfo.Id))"
                                         id="@qrCodeInfo.Id"
                                         src="@(ImageBase64Text+qrCodeInfo.QRCode)"
                                         style="width: 100px; height: 50px; cursor: pointer;" />
                                </div>
                            </td>
                            <td>
                                @{
                                    if (qrCodeInfo.IsUpdatedByWorker)
                                    {
                                        <span class="badge badge-success">Saved before</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-info">Awaiting</span>
                                    }
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (QrCodeInfoGenerator.QRCode != null)
        {
            <div class="col-md-6">
                <div class="@(Updated ? "d-block" : "d-none")">
                    <h4><i>Qr Code information updated successfully.</i></h4>
                </div>
                <EditForm Model="@QrCodeInfoGenerator" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator/>
                    
                    <div class="form-group row">
                        <label for="firstName" class="col-sm-2 col-form-label">
                            First Name
                        </label>
                        <div class="col-sm-10">
                            <InputText id="firstName" class="form-control" placeholder="First Name"
                                       @bind-Value="QrCodeInfoGenerator.FirstName"/>
                            <ValidationMessage For="@(() => QrCodeInfoGenerator.FirstName)"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lastName" class="col-sm-2 col-form-label">
                            Last Name
                        </label>
                        <div class="col-sm-10">
                            <InputText id="lastName" class="form-control" placeholder="Last Name"
                                       @bind-Value="QrCodeInfoGenerator.LastName"/>
                            <ValidationMessage For="@(() => QrCodeInfoGenerator.LastName)"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label">
                            Email
                        </label>
                        <div class="col-sm-10">
                            <InputText id="ZipCode" class="form-control" placeholder="ZipCode"
                                       @bind-Value="QrCodeInfoGenerator.ZipCode"/>
                            <ValidationMessage For="@(() => QrCodeInfoGenerator.ZipCode)"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="Street" class="col-sm-2 col-form-label">
                            Street
                        </label>
                        <div class="col-sm-10">
                            <InputText id="Street" class="form-control"
                                       @bind-Value="QrCodeInfoGenerator.Street"/>
                            <ValidationMessage For="@(() => QrCodeInfoGenerator.Street)"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="dateOfBirth" class="col-sm-2 col-form-label">
                            Date Of Birth
                        </label>
                        <div class="col-sm-10">
                            <InputDate @bind-Value="QrCodeInfoGenerator.BirthDate" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="MobileNo" class="col-sm-2 col-form-label">
                            Mobile No
                        </label>
                        <div class="col-sm-10">
                            <InputText id="MobileNo" class="form-control"
                                       @bind-Value="QrCodeInfoGenerator.MobileNo"/>
                            <ValidationMessage For="@(() => QrCodeInfoGenerator.MobileNo)"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="MobileNo" class="col-sm-2 col-form-label">
                            Insurance Company
                        </label>
                        <div class="col-sm-10">
                            <InputText id="InsuranceCompany" class="form-control"
                                       @bind-Value="QrCodeInfoGenerator.InsuranceCompany"/>
                            <ValidationMessage For="@(() => QrCodeInfoGenerator.InsuranceCompany)"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="MobileNo" class="col-sm-2 col-form-label">
                            InsuranceCompany Card Nr
                        </label>
                        <div class="col-sm-10">
                            <InputText id="InsuranceCompanyCardNr" class="form-control"
                                       @bind-Value="QrCodeInfoGenerator.InsuranceCompanyCardNr"/>
                            <ValidationMessage For="@(() => QrCodeInfoGenerator.InsuranceCompanyCardNr)"/>
                        </div>
                    </div>

                    <button class="btn btn-primary" type="submit">Update</button>
                </EditForm>
            </div>
        }
    </div>
}
