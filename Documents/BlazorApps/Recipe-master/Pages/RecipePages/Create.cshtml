@page
@model RecipeMaster.Pages.RecipePages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>New Recipe</h4>

<div class="row mb-5">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger form-control-sm"></div>
            <div class="form-row pb-0 mb-3">
            </div>

            <div class="form-row pb-0 mb-0">
                <div class="form-group pb-0 mb-0 col-md-3">
                    <img src="~/img/RecipeImagePlaceholder.jpg" height="200" width="250" class="img-thumbnail" />
                </div>
                <div class="form-group pb-0 mb-0 col-md-9">
                    <div class="form-row pb-0 mb-0">
                        <label asp-for="Recipe.Name" class="col-sm-2 col-form-label-sm"></label>
                        <div class="form-group pb-0 mb-0 col-sm-5">
                            <input asp-for="Recipe.Name" class="form-control form-control-sm" />
                            <span asp-validation-for="Recipe.Name" class="text-danger"></span>
                        </div>
                        <div class="form-row pb-0 mb-0 col-sm-5">
                            <div class="input-group pb-0 mb-0">
                                <select asp-items="Model.LkpRecipeCategory" id="category" class="form-control form-control-sm" multiple>
                                </select>
                                <input type="hidden" id="SelectedLkpRecipeCategories" asp-for="Recipe.SelectedLkpRecipeCategories"/>
                            </div>
                        </div> 
                    </div>
                    <div class="form-row pb-0 mt-3">
                        <label asp-for="Recipe.NumServings" class="col-sm-1 col-form-label-sm "></label>
                        <div class="form-group pb-0 mb-0 col-md-1">
                            <input asp-for="Recipe.NumServings" class="form-control form-control-sm" />
                        </div>
                        <label asp-for="Recipe.DifficultyId" class="col-form-label-sm col-sm-1 text-sm-right"></label>&nbsp;&nbsp;
                        <div class="form-check pb-0 mb-0 col-md-3">
                            <select asp-items="Model.LkpRecipeDifficulty" asp-for="Recipe.DifficultyId" class="form-control form-control-sm">
                                <option value="">Choose Difficulty</option>
                            </select>
                        </div>
                        <label class="col-form-label-sm  col-sm-1 text-right">Favorite</label>
                        <div class="form-group pb-0 mt-2 col-sm-4">
                            <input asp-for="Recipe.FavoriteFlag" class="form-check" />
                        </div>
                    </div>

                    <div class="form-row pb-0 mt-3">
                        <label asp-for="Recipe.Prep" class="col-form-label-sm col-sm-1 "></label>
                        <div class="form-group pb-0 mb-0 col-md-2">
                            <input asp-for="Recipe.Prep" class="form-control form-control-sm" />
                        </div>
                        <label asp-for="Recipe.Cook" class="col-form-label-sm col-sm-1 text-sm-right"></label>
                        <div class="form-group pb-0 mb-0 col-md-2">
                            <input asp-for="Recipe.Cook" class="form-control form-control-sm" />
                        </div>
                        <label asp-for="Recipe.Total" class="col-form-label-sm col-sm-1 text-sm-right"></label>
                        <div class="form-group pb-0 mb-0 col-md-2">
                            <input asp-for="Recipe.Total" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="form-row pb-0 mt-3">
                        <label asp-for="Recipe.Source" class="col-form-label-sm col-sm-1 "></label>
                        <div class="form-group pb-0 mb-0 col-md-5">
                            <input asp-for="Recipe.Source" class="form-control form-control-sm" />
                        </div>
                        <label asp-for="Recipe.URL" class="col-form-label-sm col-sm-1 text-sm-right"></label>
                        <div class="form-group pb-0 mb-0 col-md-5">
                            <input asp-for="Recipe.URL" class="form-control form-control-sm" />
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-row pb-0 mb-0">

                <div class="form-group col-sm-12">
                    <label asp-for="Recipe.Description" class="control-label"></label>
                    <textarea asp-for="Recipe.Description" class="form-control form-control-sm"></textarea>
                    <span asp-validation-for="Recipe.Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row pb-0 mb-0">
                <div class="form-group col-sm-6">
                    <div style="margin-right:15px; ">
                        <label class="control-label">Ingredients</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span style="font-size:12px; font-weight:700;">Add</span>
                        <div>


                        </div>
                    </div>
                </div>
                <div class="form-group col-sm-6">
                    <div style="margin-left:15px;">
                        <label asp-for="Recipe.Directions" class="control-label"></label>
                        <textarea asp-for="Recipe.Directions" class="form-control form-control-sm" rows="15"></textarea>
                    </div>
                </div>
            </div>

            <div class="form-row pb-0 mb-0">

                @*<div class="form-group col-sm-6 ">
                    <div style="margin-right:15px; ">
                                <label class="control-label">Nutrition</label>
                                    <textarea class="form-control form-control-sm " rows="10"></textarea>
                        </div>
                        </div>*@
                <div class="form-group col-sm-6">
                    @*<div style="margin-left:15px;">*@
                    <label asp-for="Recipe.Notes" class="control-label"></label>
                    <textarea asp-for="Recipe.Notes" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Recipe.Notes" class="text-danger"></span>
                    @*</div>*@
                </div>


            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
    <div>
        <a asp-page="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#category').multiselect({
            // enableHTML: true
            enableAddOption: true
        });

        //multiselect-selected-text
        $('#category').change(e => {
            setTimeout(() => {
                $('#SelectedLkpRecipeCategories').val($('.multiselect').attr('title').replaceAll(' ', ''));
            }, 2000);
        });
    </script>
}
