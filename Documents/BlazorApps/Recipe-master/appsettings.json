{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    //"RecipeMasterContext": "Server=patty-laptop\\sqlexpress;Database=RecipeMaster;User Id=Pbanks;Password=password;",
    "RecipeMasterContext": "Server=DESKTOP-8KAS1U3\\MSSQLSERVER01;Database=RecipeMaster;persist security info=True;Integrated Security=true;"

  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\RecipeMaster\\Logs\\log.txt",
          "outputTemplate": "{Timestamp:G} {Message}{NewLine:1}{Exception:1}",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
